@using WebApplication1.Models.Categories

@model CategoryViewModel

    <h2>Category Update</h2>
    <hr style="width: 100%;" />
    <form method="post">
        <div class="form-group">
            <label for="name-input">Category Name</label>
            <input type="text" name="Name" class="form-control" value=@Model.Name id="name-input" aria-describedby="emailHelp">
           
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
